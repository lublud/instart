# reload the configuration file
# c
bindcode $mod+Shift+54 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
# r
bindcode $mod+Shift+27 restart
# exit i3 (logs you out of your X session)
# e
bindcode $mod+Shift+26 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        # h
        bindcode 43 resize shrink width 10 px or 10 ppt
        # j
        bindcode 44 resize grow height 10 px or 10 ppt
        # k
        bindcode 45 resize shrink height 10 px or 10 ppt
        # l
        bindcode 46 resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        # Left
        bindcode 113 resize shrink width 10 px or 10 ppt
        # Down
        bindcode 116 resize grow height 10 px or 10 ppt
        # Up
        bindcode 111 resize shrink height 10 px or 10 ppt
        # Right
        bindcode 114 resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        # Return
        bindcode 36 mode "default"
        # Escape
        bindcode 9 mode "default"
}

# r
bindcode $mod+27 mode "resize"

# print screen
# Print
bindcode $mod+107 exec scrot -e 'mv $f ~/Pictures'
# Print && gimp
bindcode $mod+Shift+107 exec scrot -e 'mv $f ~/Pictures && gimp ~/Pictures/$f'

# volume
# XF86AudioRaiseVolume
bindcode 123 exec amixer -q set Master 3%+ unmute
# XF86AudioLowerVolume
bindcode 122 exec amixer -q set Master 3%- unmute
# XF86AudioMute
bindcode 121 exec amixer -q set Master mute
# pause / play / next / previous
# XF86AudioPlay
bindcode 172 exec playerctl play-pause
# XF86AudioNext
bindcode 171 exec playerctl next
# XF86AudioPrev
bindcode 173 exec playerctl previous

# brightness
# XF86MonBrightnessDown
bindcode 232 exec --no-startup-id sudo ~/.i3/bright_down.sh
# XF86MonBrightnessUp
bindcode 233 exec --no-startup-id sudo ~/.i3/bright_up.sh

