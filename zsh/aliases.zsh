# Aliases

alias ll='ls -al'
alias chmod='chmod --preserve-root'
alias rm='rm -i --preserve-root'
alias mv='mv -i'
alias cp='cp -i'
alias df='df -h'
alias du='du -h'
alias axel='axel -a'

alias vi='vim'

alias vb='sudo modprobe vboxdrv'

alias starwarsascii='telnet towel.blinkenlights.nl'

alias hibern='sudo pm-suspend && i3lock -c 000000'
alias reload='source ~/.zshrc'

alias connexr='xrandr --output HDMI-0 --auto --right-of LVDS-0'
alias connexl='xrandr --output HDMI-0 --auto --left-of LVDS-0'
alias disconnex='xrandr --output HDMI-0 --off'

alias qsdf='setxkbmap fr bepo'
alias auie='setxkbmap fr'
